[Unit]
Description=soga@%i Service
After=rc-local.service

[Service]
Type=simple
ExecStart=/root/soga/soga -c /root/soga/%i.conf -b /root/soga/blockList -d /root/soga/dns.yml 
Restart=always
LimitAS=infinity
LimitRSS=infinity
LimitCORE=infinity
LimitNOFILE=999999
#调整服务CPU IO的优先级
CPUWeight=100
IOWeight=100

[Install]
WantedBy=multi-user.target
