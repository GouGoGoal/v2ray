#HAproxy的配置文件

global
ulimit-n  51200
defaults
log global
mode    tcp
option  dontlognull
timeout connect 1000ms
timeout client 150000ms
timeout server 150000ms
listen status
bind 0.0.0.0:1080
mode http
log global
stats refresh 30s
stats uri /admin?stats
stats realm Private lands
stats auth admin:password
stats hide-version
frontend ssin
bind *:587
#如果是普通模式，那这里就填25，如果是SSL模式，就需要填465
default_backend ssout
backend ssout
server server1 smtp.gmail.com  maxconn 204800
#这里的IP(11.22.33.44)需要改成SMTP地址的IP，ping一下SMTP域名即可得到地址



###阿里DDNS
cd /root
rm -ff ddns.sh
wget https://bitbucket.org/ilemonrain/aliddns/downloads/AliDDNS-v2.0.sh
mv AliDDNS-v2.0.sh ddns.sh
chmod 755 ddns.sh
echo "AliDDNS_DomainName=\"lovegoogle.xyz\"
AliDDNS_SubDomainName=\"hkbn\"
AliDDNS_TTL=\"600\"
AliDDNS_AK=\"LTAIvQMNOvArM6XX\"
AliDDNS_SK=\"o5EHMjdjN4rWWAhyMRELYbcaIvc9kn\"
AliDDNS_LocalIP=\"curl ipv4.ip.sb\"
AliDDNS_DomainServerIP=\"223.5.5.5\" ">/etc/OneKeyAliDDNS/config.cfg
./ddns.sh config
./ddns.sh run
echo "* * * * * root /root/ddns.sh run"

