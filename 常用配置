#########
#HAproxy的配置文件

global
       maxconn 1024   #最大并发
defaults   
       log global
       mode    tcp
       option  dontlognull
       timeout connect 1000ms
       timeout client 150000ms
       timeout server 150000ms
listen google_smtp
       mode tcp
	   bind *:587
	   server server1 smtp.gmail.com

###阿里DDNS
cd /root
rm -ff ddns.sh
wget https://bitbucket.org/ilemonrain/aliddns/downloads/AliDDNS-v2.0.sh
mv AliDDNS-v2.0.sh ddns.sh
chmod 755 ddns.sh
mkdir /etc/OneKeyAliDDNS
vi /etc/OneKeyAliDDNS/config.cfg


AliDDNS_DomainName="lovegoogle.xyz"
AliDDNS_SubDomainName="hkbn"
AliDDNS_TTL="600"
AliDDNS_AK="LTAIvQMNOvArM6XX"
AliDDNS_SK="o5EHMjdjN4rWWAhyMRELYbcaIvc9kn"
AliDDNS_LocalIP="curl ipv4.ip.sb"
AliDDNS_DomainServerIP="223.5.5.5"


./ddns.sh config
./ddns.sh run
echo "* * * * * root /root/ddns.sh run"

