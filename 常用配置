####sniproxy的配置文件

user daemon
pidfile /var/run/sniproxy.pid

resolver {
    nameserver 1.1.1.1
    mode ipv4_only
}
#error_log {
#    syslog daemon
#    priority notice
#}

listen 0.0.0.0 80 {
proto http
}

listen 0.0.0.0 443 {
proto tls
}

table {
(.*.|)lovegoogle.xyz$ 127.0.0.1:444
